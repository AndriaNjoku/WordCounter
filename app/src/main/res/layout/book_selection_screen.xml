<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="#63A8BA"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="9dp"
        android:id="@+id/railwayChildren">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#63A8BA">

        <TextView
                android:text="Status: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textColor="#E3DBDB"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="31dp"
                app:layout_constraintTop_toBottomOf="@+id/status3" />

        <TextView
                android:text="The Railway Children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status2"
                android:textColor="#E3DBDB"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:textSize="24sp" />

        <TextView
                android:text="by Edith Nesbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status3"
                android:textColor="#E3DBDB"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/status2" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dot_not_downloaded"
                android:id="@+id/railwayChidrenStored"
                app:layout_constraintStart_toEndOf="@+id/status"
                app:layout_constraintTop_toTopOf="@+id/status"
                app:layout_constraintBottom_toBottomOf="@+id/status"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>